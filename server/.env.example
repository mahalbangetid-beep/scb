# Environment
NODE_ENV=production
PORT=3001

# Database - Option 1: Local PostgreSQL (RECOMMENDED for VPS)
DATABASE_URL="postgresql://wabar_user:YOUR_PASSWORD@localhost:5432/wabar_db"
DIRECT_URL="postgresql://wabar_user:YOUR_PASSWORD@localhost:5432/wabar_db"

# Database - Option 2: Supabase (Cloud)
# DATABASE_URL="postgresql://postgres.PROJECT_ID:PASSWORD@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres.PROJECT_ID:PASSWORD@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API
API_KEY_PREFIX=dk_

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Redis (for queue)
REDIS_URL=redis://localhost:6379

# ==================== SMM PANEL CONFIG ====================

# Encryption key for API keys (32 bytes hex)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# ==================== TELEGRAM CONFIG ====================

# Master Telegram Bot Token (for system notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ==================== CREDIT/PRICING CONFIG ====================

# Default credit for new users
DEFAULT_USER_CREDIT=10.00

# Message pricing (per message)
CREDIT_PER_MESSAGE_WA=0.01
CREDIT_PER_MESSAGE_TG=0.01
CREDIT_PER_GROUP_MESSAGE=0.02

# Login pricing
FIRST_WA_LOGIN_FREE=true
WA_LOGIN_FEE=5.00
WA_LOGIN_FEE_TYPE=MONTHLY

FIRST_TG_LOGIN_FREE=true
TG_LOGIN_FEE=5.00
TG_LOGIN_FEE_TYPE=MONTHLY

# ==================== PAYMENT GATEWAYS ====================

# Binance Pay
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Cryptomus
CRYPTOMUS_MERCHANT_ID=
CRYPTOMUS_API_KEY=

# ==================== SECURITY ====================

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-key
